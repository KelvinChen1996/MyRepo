<android.support.v4.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/franchisedetailreviewandrating_swiperefreshlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v4.widget.NestedScrollView
            android:id="@+id/franchisedetailreviewandrating_nestedscrollview"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_marginTop="200dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/nullfranchisereviewrating"
                android:gravity="center"
                android:textSize="24sp" />
        </android.support.v4.widget.NestedScrollView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/franchisedetailreviewandrating_container"
            android:background="@color/white"
            android:orientation="vertical">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/franchisedetailreviewandrating_recyclerview"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:minHeight="460dp"
                android:stackFromBottom="true"
                android:transcriptMode="alwaysScroll"
                android:layout_weight="0.88"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/franchisedetailreviewandrating_allowornot"
            android:background="@color/white"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="vertical">
            <RatingBar
                android:id="@+id/franchisedetailreviewandrating_ratingbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <EditText
                    android:layout_margin="5dp"
                    android:hint="Type here"
                    android:id="@+id/franchisedetailreviewandrating_editmessage"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:layout_weight="1" />
                <ImageView
                    android:id="@+id/franchisedetailreviewandrating_send"
                    android:layout_margin="5dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/circle_send"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</android.support.v4.widget.SwipeRefreshLayout>
