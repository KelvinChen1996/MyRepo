                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                            android:layout_margin="5dp"
                                android:textStyle="bold"
                                android:textAlignment="center"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Pet Services"
                                android:textSize="12sp"
                                android:textColor="@color/white"/>
                        </LinearLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">
                <android.support.v7.widget.CardView
                    android:id="@+id/franchiselist.retail"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="5dp"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:background="@color/category_violet"
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_margin="5dp"
                            android:layout_gravity="center"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/retail"/>
                        <LinearLayout
                            android:layout_marginTop="5dp"
                            android:background="@color/category_violet1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                            android:layout_margin="5dp"
                                android:textStyle="bold"
                                android:textAlignment="center"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Retail"
                                android:textSize="12sp"
                                android:textColor="@color/white"/>
                        </LinearLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:id="@+id/franchiselist.tech"
                    android:layout_centerHorizontal="true"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:background="@color/category_cream"
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_margin="5dp"
                            android:layout_gravity="center"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/tech"/>
