<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">
    <LinearLayout
        android:id="@+id/itemtopfranchise_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/itemtopfranchise_logo"
                android:layout_width="40dp"
                android:src="@drawable/logokfc"
                android:layout_height="40dp"
                android:layout_marginRight="10dp"/>
            <TextView
                android:id="@+id/itemtopfranchise_namafranchise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Franchise"
                android:textSize="16sp"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:textStyle="bold"/>
        </LinearLayout>
        <ImageView
            android:scaleType="fitXY"
            android:id="@+id/itemtopfranchise_brochure"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/brochurekfc"
            android:maxHeight="300dp"
            android:adjustViewBounds="true"/>
        <LinearLayout
            android:background="@color/gold1"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:padding="5dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/favorite"/>
            <TextView
                android:id="@+id/itemtopfranchise_nFavorite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_marginLeft="5dp"
                android:textSize="12sp"
                android:text="20"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_marginLeft="5dp"
                android:textSize="12sp"
                android:text="People Favorite This"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>